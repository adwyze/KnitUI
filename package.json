{
  "name": "Knit-UI",
  "version": "0.1.0",
  "description": "Component library for Clarisights",
  "main": "lib/index.js",
  "module": "es/index.js",
  "repository": "git@github.com:adwyze/KnitUI.git",
  "author": "Rohan Malhotra <rohan.root@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest --verbose=false --no-cache",
    "prebuild": "rm -rf lib && rm -rf es",
    "build": "npm-run-all --parallel build:cjs build:es",
    "build:cjs": "NODE_ENV=production babel --extensions .ts,.tsx components --out-dir lib --ignore components/**/*.test.jsx,components/**/__tests__,components/**/*.spec.jsx,components/**/__snapshots__, components/**/*.stories.tsx",
    "build:es": "NODE_ENV=production BABEL_ENV=es babel --extensions .ts,.tsx,.js,.jsx components --out-dir es --ignore components/**/*.test.jsx,components/**/__tests__,components/**/*.spec.jsx,components/**/__snapshots__, components/**/*.stories.tsx",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "precommit": "lint-staged",
    "lint-staged:ts": "tsc && node node_modules/tslint/bin/tslint --project tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "components/**/*.tsx": [
      "yarn lint-staged:ts",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.test.json"
      }
    },
    "setupFilesAfterEnv": [
      "react-testing-library/cleanup-after-each"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/runtime": "^7.4.3",
    "@storybook/addon-actions": "^5.0.10",
    "@storybook/addon-info": "^5.0.10",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-storyshots": "^5.0.11",
    "@storybook/addon-storysource": "^5.0.11",
    "@storybook/react": "^5.0.10",
    "@types/jest": "^24.0.9",
    "@types/storybook__react": "^4.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "husky": "^1.3.1",
    "jest": "^24.3.1",
    "jest-dom": "^3.1.4",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.6",
    "react-docgen-typescript-loader": "^3.0.1",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.8.4",
    "react-testing-library": "^7.0.0",
    "storybook-readme": "^5.0.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@storybook/addon-backgrounds": "^5.0.10",
    "@types/styled-components": "^4.1.14",
    "chroma-js": "^2.0.3",
    "rc-checkbox": "^2.1.6",
    "rc-switch": "^1.9.0",
    "react-test-renderer": "^16.8.6",
    "styled-components": "^4.2.0"
  }
}
